<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/llheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/headerbackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/productlogo"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="7dp"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/llheader" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llone"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/llheader"
                android:layout_marginTop="20dp"
                android:layout_weight="50"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rrprofile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_margin="10dp"
                    android:background="@drawable/thumb_image_shape"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/improductregst"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/profile_imag" />

                    <TextView
                        android:id="@+id/tvcustomerrest"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/improductregst"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Profile Setting"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                      android:id="@+id/rrtakeexample"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                     android:layout_margin="10dp"
                    android:background="@drawable/thumb_image_shape"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imglance"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/take_exam" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imglance"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:text="Take New Exam"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lltwo"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/llheader"
                android:layout_marginTop="20dp"
                android:layout_weight="50"
                android:orientation="horizontal" >

                <RelativeLayout
                      android:id="@+id/rrviewresule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_margin="10dp"
                    android:background="@drawable/thumb_image_shape"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imcomplaint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/view_result" />

                    <TextView
                        android:id="@+id/tvviewresult"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imcomplaint"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="View Result"
                       android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>