<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
     >

    <RelativeLayout
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        android:paddingBottom="10dp"
        android:paddingLeft="05dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="" />

        <TextView
            android:id="@+id/txt_morning_activity"
            style="@style/NormalText"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/txt_morning_time"
            android:text="Activity"
            
            android:textSize="15sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_morning_time"
            style="@style/NormalText"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="05dp"
            android:text="500 Spoon"
            android:textSize="13sp"
            android:textColor="@color/dark_blue"
            android:typeface="sans" />

        <RelativeLayout
            android:id="@+id/rel_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/bDetails"
            android:layout_toRightOf="@+id/txt_morning_time"
            android:paddingLeft="10dp"
            android:paddingRight="15dp" >

            
            <TextView 
                android:id="@+id/txtGravity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
            
            <TextView
                android:id="@+id/txtMaxPts"
                style="@style/NormalText"
               android:layout_marginRight="10dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
                android:text="888"
                android:textSize="15sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/txt_morning_points"
                style="@style/NormalText"
                android:layout_toLeftOf="@+id/txtMaxPts"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:text="777"
                android:textSize="15sp"
                android:typeface="sans" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/bDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edit" />

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_mypoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>