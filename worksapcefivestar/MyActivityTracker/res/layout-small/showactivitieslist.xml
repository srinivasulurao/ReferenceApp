<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#30ffffff"
    >
    
    <RelativeLayout 
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="05dp"
        >
        <TextView 
            android:id="@+id/name"
            style="@style/SubTextHeader"
            android:text="Activity Name"
            android:layout_marginLeft="05dp"
            android:layout_alignParentLeft="true"
            />
        <TextView 
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
        <TextView 
            android:id="@+id/qty"
            style="@style/SubTextHeader"
            android:text="Quantity"
            android:layout_centerInParent="true"
            />
        <RelativeLayout 
            android:id="@+id/relPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/qty"
            android:layout_toLeftOf="@+id/myPoints"
            android:paddingRight="20dp"
            >
             <TextView 
            android:id="@+id/pts"
            style="@style/SubTextHeader"
            android:text="Points"
            android:layout_alignParentRight="true"
            />
        </RelativeLayout>
        <TextView 
            android:id="@+id/myPoints"
            style="@style/SubTextHeader"
            android:text="Delete"
            android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/list_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="05dp"
        android:focusable="false"
        android:layout_below="@+id/rel_header"
        android:layout_above="@+id/rel_bottom_options"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:divider="@color/white"
        android:dividerHeight="05dp"
        android:background="@color/white"
        ></ListView>
    
    <RelativeLayout 
        android:id="@+id/rel_bottom_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="10dp"
        >
        
        <Button 
            android:id="@+id/btnAddNew"
            style="@style/ButtonBlue"
            android:padding="10dp"
            android:text="Add New"
            
            />
        
    </RelativeLayout>
    

</RelativeLayout>
