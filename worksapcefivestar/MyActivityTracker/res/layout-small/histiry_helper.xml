<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="02dp"
    android:paddingRight="02dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/linSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="05dp"
        android:layout_toLeftOf="@+id/txtPercent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtNoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtEvening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDate"
            style="@style/textview"
            android:text="01/Jan/14"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/textview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="05dp"
            android:text="Something"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtMessage"
            style="@style/textview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="05dp"
            android:text="Content" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/txtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        
        
    </LinearLayout>

    <TextView
        android:id="@+id/txtPercent"
        style="@style/textview"
        android:layout_centerVertical="true"
        android:layout_marginRight="05dp"
        android:layout_toLeftOf="@+id/img"
        android:text="55"
        android:textColor="@color/startcolor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/a" />

</RelativeLayout>