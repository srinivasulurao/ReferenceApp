<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
     >
     
    <include 
        android:id="@+id/edtActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/edittextlayout"
        android:layout_margin="05dp"
        />
    
    <RelativeLayout
        android:id="@+id/lin_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/edtActivity"
        >
    <LinearLayout 
        android:id="@+id/lin_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="05dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        >
        <ImageView 
            android:id="@+id/imgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time"
            />
        
        <TextView 
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_marginTop="05dp"
            android:textColor="@color/black"
            />
        
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/lin_Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="05dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/txt"
        >
          <ImageView 
            android:id="@+id/imgPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/points"
            />
        <TextView 
            android:id="@+id/txtPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:layout_marginTop="05dp"
            android:textColor="@color/black"
            />
        
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/lin_Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="05dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt"
        >
          <ImageView 
            android:id="@+id/imgAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alert"
            />
        <TextView 
            android:id="@+id/txtAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert"
            android:layout_marginTop="05dp"
            android:textColor="@color/black"
            />
        
    </LinearLayout>
    
     <TextView 
         android:id="@+id/txt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text=""
         
         android:layout_centerInParent="true"
         />
    
     <LinearLayout 
        android:id="@+id/lin_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="05dp"
        android:orientation="vertical"
        android:layout_marginLeft="05dp"
        android:layout_alignParentRight="true"
        >
          <ImageView 
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete"
            />
        <TextView 
            android:id="@+id/txtDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginTop="05dp"
            android:textColor="@color/black"
            />
        
    </LinearLayout>
    </RelativeLayout>
     
     <View 
         android:id="@+id/v1"
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:background="@color/dark_gray"
         android:layout_marginTop="05dp"
         android:layout_below="@+id/lin_options"
         />
     
    
     
     <RelativeLayout 
         android:id="@+id/rel_bottom"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         
         android:layout_marginTop="05dp"
         android:layout_below="@+id/v1"
         >
         
         <RelativeLayout 
             android:id="@+id/relNO"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="10dp"
             android:layout_alignParentLeft="true"
             android:background="@color/listbg1"
             >
         <ImageView 
             android:id="@+id/btn_Cancel"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/no"
             />
         </RelativeLayout>
         
         <RelativeLayout 
             android:id="@+id/relYES"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="10dp"
             android:layout_alignParentRight="true"
             android:background="@color/green"
             >
          <ImageView 
             android:id="@+id/btn_Ok"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/yes"
             
             />
          </RelativeLayout>
         
     </RelativeLayout>
    
    

</RelativeLayout>
