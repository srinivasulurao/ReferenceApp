<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dispatch_tab_past_layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" >

       <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:id="@+id/rna_btn_layout"       
       >
        
        <Button 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="AOTD"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"     
            android:background="@drawable/btn_background"
            android:padding="10dp"      
            android:textStyle="bold" 
            android:id="@+id/rna_btn"/>
        <View 
            android:layout_below="@+id/rna_btn"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#DBD9D0"/>
        
        
    </RelativeLayout>
    
            <ListView 
                android:layout_below="@+id/rna_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollingCache="false"
                android:divider="#00000000"
                android:layout_marginLeft="05dp"
                android:layout_marginRight="05dp"
                android:layout_marginTop="05dp"
                android:id="@+id/rna_dispatch_present_lsitview">
                
            </ListView>
       
    </RelativeLayout>

</RelativeLayout>