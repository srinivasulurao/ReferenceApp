<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/aotd_background" >

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/dispatchScreen_ll_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/aotd_logo"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/aotd_title"
                android:gravity="center"
                android:text="Login"
                android:textColor="#4169E1"
                android:textSize="25dip"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/aotd_img_mode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/online" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="400dp"
            android:layout_height="fill_parent"
            android:layout_below="@+id/dispatchScreen_ll_title"
            android:layout_centerHorizontal="true" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <EditText
                    android:id="@+id/email_EditTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_text_field"
                    android:hint="Email"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/password_EditTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/email_EditTxt"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_text_field"
                    android:hint="Password"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:password="true"
                    android:singleLine="true" />

                <CheckBox
                    android:id="@+id/remember_ChkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/password_EditTxt"
                    android:layout_marginLeft="7dp"
                    android:button="@drawable/check_box"
                    android:paddingBottom="15dp"
                    android:paddingTop="17dp"
                    android:text="@string/rememberme"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/loginInfo_TextView"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/remember_ChkBox"
                    android:background="@drawable/login_login_info"
                    android:paddingLeft="17dp"
                    android:paddingRight="9dp"
                    android:paddingTop="10dp"
                    android:text="@string/login_info"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/login_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loginInfo_TextView"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/login_blue_btn"
                    android:text="Login" />

                <Button
                    android:id="@+id/register_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/loginInfo_TextView"
                    android:layout_below="@+id/loginInfo_TextView"
                    android:background="@drawable/login_blue_btn"
                    android:text="Register"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/forgotpasswrd_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/login_Btn"
                    android:paddingRight="3dp"
                    android:paddingTop="3dp"
                    android:text="Forgot Password"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_Btn"
                    android:layout_toLeftOf="@+id/forgotpasswrd_TextView"
                    android:src="@drawable/login_lock" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>