<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="@dimen/login_frame"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/h5"
        android:layout_gravity="center_horizontal">
        
        <EditText
                android:id="@+id/et_email"
                style="@style/style_et"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_back"
                android:hint="Email"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" 
                android:layout_marginTop="@dimen/h1"/>
        
        <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h1"
                android:background="@color/red"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="@dimen/h2"
                android:textStyle="bold" />
        
        <TextView style="@style/style_lable"
            		android:layout_width="match_parent"
            		android:gravity="center"
            		 android:textSize="@dimen/h3"
            		android:layout_marginTop="@dimen/h1"
            		android:text="We will send you an email with further instructions to reset your password."/>
        
        
    </LinearLayout>

</LinearLayout>