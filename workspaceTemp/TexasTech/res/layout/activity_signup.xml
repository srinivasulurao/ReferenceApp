<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/h5" >

        <com.texastech.helper.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/place_holder"
            android:layout_width="@dimen/place_holder"
            android:layout_height="@dimen/place_holder"
            android:src="@drawable/ic_launcher"
            app:border_color="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_first_name"
            style="@style/style_et"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:hint="First Name"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/et_last_name"
            style="@style/style_et"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/h7"
            android:background="@android:color/transparent"
            android:hint="Last Name"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/h5"
            android:orientation="vertical"
            android:padding="@dimen/h5" >

            <TextView
                style="@style/style_lable"
                android:text="Email"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_email"
                style="@style/style_et"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:hint="Email Address"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/h6"
                android:layout_marginTop="@dimen/h6"
                android:background="@android:color/darker_gray" />

            <TextView
                style="@style/style_lable"
                android:text="UserName"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_userName"
                style="@style/style_et"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:hint="UserName"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/h6"
                android:layout_marginTop="@dimen/h6"
                android:background="@android:color/darker_gray" />

            <TextView
                style="@style/style_lable"
                android:text="Password"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_password"
                style="@style/style_et"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/h6"
                android:layout_marginTop="@dimen/h6"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/style_lable"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="R#"
                    android:textColor="@color/red" />

                <TextView
                    style="@style/style_lable"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/h6"
                    android:layout_weight="1"
                    android:text="Role"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_rn"
                    style="@style/style_et"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="RN#"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/spin_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h6"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/h6"
                android:layout_marginTop="@dimen/h6"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layout_program_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/style_lable"
                    android:text="Program"
                    android:textColor="@color/red" />

                <Spinner
                    android:id="@+id/spin_program"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/h6"
                    android:layout_marginTop="@dimen/h6"
                    android:background="@android:color/darker_gray" />
                <!--  -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/style_lable"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Graduation Term"
                        android:textColor="@color/red" />

                    <TextView
                        style="@style/style_lable"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Graduation YYYY"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spin_graduation_mm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/style_lable"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:hint="Graduation YYYY"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!--
                <TextView
                    style="@style/style_lable"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Graduation MM/YYYY"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/style_lable"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:hint="Graduation MM/YYYY"
                    android:textColor="@color/black" />
                -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/h6"
                    android:layout_marginTop="@dimen/h6"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>