<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_background"
    android:orientation="vertical"
     >
     
     
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

   
    
     <com.voicey.utils.RoundedImageView
        android:id="@+id/capture"
            android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        
        android:src="@drawable/add_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="New Android"
           
            android:textStyle="bold" />

        <TextView
            android:id="@+id/withComposing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="status"
           />
    </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/chatlistview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:layout_marginBottom="10dp"
        android:dividerHeight="3dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />
    
    <LinearLayout 
    android:id="@+id/bottomLayoutchat"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginRight="2dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/sendStickers"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/smiley" />

    <com.rockerhieu.emojicon.EmojiconEditText
        android:id="@+id/etmessageText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/chat_message_background"
        android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
        android:singleLine="false" />
    
     <ImageView
                    android:id="@+id/ivaddimage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/camera_new" />

    

      <ImageView
                    android:id="@+id/ivsend"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rocket"
                    android:gravity="center" />
      
      <ImageView
                    android:id="@+id/ivrecord"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/launcher" />

</LinearLayout>

    <FrameLayout
        android:id="@+id/emojicons"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true" />
    
    
    

    

</LinearLayout>