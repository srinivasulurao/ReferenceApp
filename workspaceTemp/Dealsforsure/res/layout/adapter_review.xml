<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:padding="5dp" >

    <TextView
        android:id="@+id/lblcomments"
        style="@android:style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding="5dp"
         android:textStyle="bold"
        android:text="comments"
        android:textColor="@color/text_deal_detail"
        />

    <TextView
        android:id="@+id/lblsendby"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblcomments"
        android:layout_marginTop="20dp"
        android:text="By vinay"
        android:textColor="@color/text_sub_title" />

    <LinearLayout
        android:id="@+id/llstarrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblcomments"
        android:background="@color/Background_main_content"
        android:orientation="horizontal" >

       
    </LinearLayout>

    <TextView
        android:id="@+id/lbldate"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llstarrate"
        android:layout_marginTop="5dp"
        android:text="10-2-2013"
        android:textColor="@color/text_sub_title" />

</RelativeLayout>