<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#AC0806" />
            <!-- #181D23 --> <!--  #AC0806-->

            <stroke android:width="2dp" android:color="#3168AD" /> 

            <corners android:radius="30dp" />

            <padding android:bottom="20dp" android:left="10dp" android:right="10dp" android:top="20dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#3168AD" android:startColor="#3168AD" />

            <stroke android:width="2dp" android:color="#cb0101" />

            <corners android:radius="50dp" />

            <padding android:bottom="25dp" android:left="15dp" android:right="15dp" android:top="25dp" />
        </shape></item>

</selector>