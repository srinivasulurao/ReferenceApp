<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gesture-image="http://schemas.polites.com/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e1a1a" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#2d2a2a"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/like_count_photo_detail_timefeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/like"
                android:drawablePadding="5dp"
                android:text="56"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/comment_count_photo_detail_timefeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/comment"
                android:drawablePadding="5dp"
                android:text="36"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/share_count_photo_detail_timefeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/share"
                android:drawablePadding="5dp"
                android:text="0"
                android:textColor="#ffffff" />
        </LinearLayout>

        <com.polites.android.GestureImageView
            android:id="@+id/image_view_pager_timefeed"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:alpha="1"
            android:scaleType="centerInside"
            gesture-image:max-scale="10.0"
            gesture-image:min-scale="0.75" >
        </com.polites.android.GestureImageView>

        <ProgressBar
            android:id="@+id/loading_timefeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentLeft="true"
            android:alpha=".75"
            android:background="#2d2a2a"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/desc_photo_detail_timefeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="hello everyone this is the detail description on the image #selfie #rockstar #youflik #youflikfun #youflik #kumarapark west"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/share_photo_detail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/like_photo_detail"
            android:layout_marginRight="14dp"
            android:alpha=".75"
            android:background="#2d2a2a"
            android:src="@drawable/sharewhite" />

        <ImageButton
            android:id="@+id/like_photo_detail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="21dp"
            android:layout_toLeftOf="@+id/share_photo_detail"
            android:alpha=".75"
            android:background="#2d2a2a"
            android:src="@drawable/like_white" />
    </RelativeLayout>

</LinearLayout>