<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/feed_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/patchContainer_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/feedpatch"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/feedImage_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/feed_like_main"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:alpha=".60"
                android:background="@drawable/round_button_transparent_black"
                android:scaleType="fitXY"
                android:src="@drawable/like_white"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/like_cmnt_share_photo_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/feedImage_main"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/feed_like_count_photo_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/like"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="@dimen/feed_item_status_pad_top"
                    android:text="7"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/feed_comment_count_photo_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/comment"
                    android:drawablePadding="2dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="@dimen/feed_item_status_pad_top"
                    android:text="0"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/feed_share_count_photo_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/share"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="@dimen/feed_item_status_pad_top"
                    android:text="0"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <ImageView
                android:id="@+id/overlay_video_post_main"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_av_play_over_video"
                android:visibility="gone" />
        </RelativeLayout>
        <!-- krunal -->

        <LinearLayout
            android:id="@+id/text_share_container_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#d3d3d3"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.youflik.youflik.utils.ImageViewRounded
                    android:id="@+id/textShare_user_profile_pic_main"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textshare_username_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textshare_text_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="5"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- krunal -->

        <TextView
            android:id="@+id/txtStatusMsg_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:maxLines="5"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/feed_item_status_pad_left_right"
            android:paddingTop="@dimen/feed_item_status_pad_top" />

        <!--
             <TextView
            android:id="@+id/txtLoc_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/feed_loc"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/feed_item_status_pad_left_right"
            android:singleLine="true"
            android:textColor="#3B9DDA"
            android:visibility="gone" />
        -->

        <LinearLayout
            android:id="@+id/like_cmnt_share_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/feed_like_count_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/like_grey"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="@dimen/feed_item_status_pad_top"
                    android:text="7"
                    android:textColor="@color/timestamp" />

                <TextView
                    android:id="@+id/feed_comment_count_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/comment_grey"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="@dimen/feed_item_status_pad_top"
                    android:text="2"
                    android:textColor="@color/timestamp" />

                <TextView
                    android:id="@+id/feed_share_count_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/share_grey"
                    android:paddingBottom="5dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="@dimen/feed_item_status_pad_top"
                    android:text="0"
                    android:textColor="@color/timestamp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/feed_like_post_main"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:alpha=".60"
                    android:background="@drawable/round_button_transparent_black"
                    android:scaleType="fitXY"
                    android:src="@drawable/like_white"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/friend_request_container_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/fr_user_image_main"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/fr_connected_user_main"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/fr_user_image_main"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/connect_icon_main"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:alpha=".75"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/connect"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/like_cmnt_share_trans_container_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" >

            <ImageView
                android:id="@+id/feed_comment_main"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/feed_comment" />

            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/vertical_line" />

            <ImageView
                android:id="@+id/feed_share_main"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/feed_share" />

            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/vertical_line" />

            <ImageView
                android:id="@+id/hide_post_main"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/feed_option" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_feed_container_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/feed_item_padding_left_right"
        android:paddingRight="@dimen/feed_item_padding_left_right" >

        <com.youflik.youflik.utils.ImageViewRounded
            android:id="@+id/profilePic_main"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/feed_item_profile_info_padd" >

            <TextView
                android:id="@+id/name_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textSize="@dimen/feed_item_profile_name" />

            <TextView
                android:id="@+id/txtLoc_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/feed_loc"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/feed_item_status_pad_left_right"
                android:singleLine="true"
                android:textColor="@color/timestamp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/timestamp_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:textColor="@color/timestamp"
                android:textSize="@dimen/feed_item_timestamp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>