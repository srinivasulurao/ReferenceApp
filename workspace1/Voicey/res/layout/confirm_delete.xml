<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
        <TextView
        android:id="@+id/tvdeletemsghedding"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Delete Messages"
         android:textSize="15dp" 
       />
        
        <TextView
        android:id="@+id/textView61"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dfdfdf"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvdeletemsg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="This Message"
        android:textColor="#006FB5" />

    <TextView
        android:id="@+id/textView78"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dfdfdf"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvdeleteusermsg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#006FB5" />
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvuserlist"
        android:layout_marginTop="5dp"
     android:id="@+id/lldeletelastactive"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/ivdeletelastactive"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/tick_box_active" />

        <TextView
            android:id="@+id/tvdeletelast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Don't delete last message"
            android:textColor="@color/inbox_text"
            android:textSize="13dp" />
</LinearLayout>
    
    

    <TextView
        android:id="@+id/textView62"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dfdfdf"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvdeleteall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="All Inbox"
        android:textColor="#006FB5" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dfdfdf"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvuserlist"
        android:layout_marginTop="25dp"
     android:id="@+id/llcopychatactive"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/ivcopychatactive"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/tick_box_active" />

        <TextView
            android:id="@+id/tvcopychat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Keep in Chat"
            android:textColor="@color/inbox_text"
            android:textSize="13dp" />
</LinearLayout>

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvuserlist"
         android:layout_marginTop="5dp"
              android:id="@+id/lldeletetodoactive"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/ivdeletetodoactive"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/uncheckbox" />

        <TextView
            android:id="@+id/tvdeletetodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Delete ToDo"
            android:textColor="@color/inbox_text"
            android:textSize="13dp" />
</LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvuserlist"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="Close"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>