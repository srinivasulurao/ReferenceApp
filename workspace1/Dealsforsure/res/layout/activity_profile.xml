<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:background="@drawable/btn_grey" >

    <RelativeLayout
        android:id="@+id/tvsave"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="#4DC9FF"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/capture"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/capture"
            android:text="karthik"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvUserName"
            android:layout_below="@+id/tvUserName"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="E-Mail"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvemail"
            android:layout_below="@+id/tvemail"
            android:layout_marginTop="5dp"
            android:text="points"
            android:textColor="@color/text_points"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvmerchantpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvemail"
            android:layout_below="@+id/tvpoints"
            android:layout_marginTop="5dp"
            android:text="points"
            android:textColor="@color/text_points"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mystore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsave"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.75"
            android:padding="5dp"
            android:text="My Stores"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvaddStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.35"
            android:background="@drawable/apptheme_btn_default_holo_light"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="Add +"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvstore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvrecharecoins"
        android:layout_below="@+id/mystore"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:divider="@android:color/white"
        android:dividerHeight="10dp"
        android:padding="5dp" >
    </ListView>

    <TextView
        android:id="@+id/tvrecharecoins"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/apptheme_btn_default_holo_light"
        android:text="@string/btn_recharge_icon"
        android:textColor="@color/text_btn" />

</RelativeLayout>